<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="correct">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#94ffab</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item>  center
        <item name="stRadius">5dp</item>

    </style>
    <style name="wrong">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#EDE9E9</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#F44336</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#4CAF50</item>
        <item name="stLength">SHORT</item> LONG or SHORT
        <item name="stGravity">center</item>  center
        <item name="stRadius">5dp</item>

    </style>
</resources>
