<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Signup"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/smce"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            />

        <EditText
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/namereg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Name"
            android:textSize="18dp" />
        <EditText
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/emailreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="E-mail"
            android:drawablePadding="10dp"
            android:textSize="18dp" />

        <EditText
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/passwordreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawablePadding="10dp"
            android:textSize="18dp" />
        <EditText
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/dobreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Date-of-birth"
            android:drawablePadding="10dp"
            android:textSize="18dp" />
       
        <EditText
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/phonereg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Phone Number"
            android:drawablePadding="10dp"
            android:textSize="18dp" />
        <EditText
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/schoolreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="School"
            android:drawablePadding="10dp"
            android:textSize="18dp" />
        <EditText
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/groupreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="group"
            android:drawablePadding="10dp"
            android:textSize="18dp" />

        <EditText
            android:gravity="top"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#277C2A"
            android:id="@+id/addressreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Full Address *"
            android:lines="4"
            android:drawablePadding="10dp"
            android:textSize="18dp" />

        <Button
         android:onClick="submit"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Submit"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textColorHint="#00BCD4"
            android:id="@+id/logref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Already have an account ? Login.."
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>